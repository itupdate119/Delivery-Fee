<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="postcode_fee" xsi:type="array">
                                    <!-- post-code field has custom UI component -->
                                    <item name="component" xsi:type="string">B2b_EdiFee/js/view/checkout/cart/totals/postcode_fee</item>
                                    <item name="sortOrder" xsi:type="string">15</item>
                                    <item name="config" xsi:type="array">
                                        <item name="title" xsi:type="string" translate="true">Enter Postcode for delivery fees</item>
                                        <item name="template" xsi:type="string">B2b_EdiFee/checkout/cart/totals/postcode_fee</item>
                                    </item>
                                </item>
                                <item name="deliveryfee" xsi:type="array">
                                    <item name="component"  xsi:type="string">B2b_EdiFee/js/view/checkout/cart/totals/delivery_fee</item>
                                    <item name="sortOrder" xsi:type="string">20</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">B2b_EdiFee/checkout/cart/totals/delivery_fee</item>
                                        <item name="title" xsi:type="string" translate="true">Delivery Fee</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
